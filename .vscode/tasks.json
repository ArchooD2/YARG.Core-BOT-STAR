{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "buildCore",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/YARG.Core/YARG.Core.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "buildConsole",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/TestConsole/TestConsole.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "buildBenchmarks",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/YARG.Core.Benchmarks/YARG.Core.Benchmarks.csproj",
                "/property:GenerateFullPaths=true",
                "/property:Configuration=Release",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "buildAndRunBenchmarks",
            "dependsOn": "buildBenchmarks",
            "command": "${workspaceFolder}/YARG.Core.Benchmarks/bin/Release/net7.0/YARG.Core.Benchmarks.exe",
            "type": "process",
            "args": [],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "runBenchmarks",
            "command": "${workspaceFolder}/YARG.Core.Benchmarks/bin/Release/net7.0/YARG.Core.Benchmarks.exe",
            "type": "process",
            "args": [],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/TestConsole/TestConsole.csproj"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}